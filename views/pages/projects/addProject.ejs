<form class="flex flex-col gap-[20px]" action="/api/projects" method="POST" enctype="multipart/form-data">
    <div class="input flex flex-col gap-[15px]">
        <label class="text-[#f7a813] font-bold text-[20px]" for="title">Project Title</label>
        <input class="bg-white outline-none w-full p-[20px] border-[2px] border-[#f7a813]" type="text" name="title" id="title" required>
    </div>
    <div class="input flex flex-col gap-[15px]">
        <label class="text-[#f7a813] font-bold text-[20px]" for="description">Project Description</label>
        <textarea class="bg-white outline-none w-full p-[20px] h-[250px] border-[2px] border-[#f7a813]" name="description" id="description" required></textarea>
    </div>
    <div class="input flex flex-col gap-[15px]">
        <label class="text-[#f7a813] font-bold text-[20px]" for="img">Project Image</label>
        <input class="bg-white outline-none w-full p-[20px] border-[2px] border-[#f7a813]" type="file" name="img" id="img" required>
    </div>
    <div class="input flex flex-col gap-[15px]">
        <label class="text-[#f7a813] font-bold text-[20px]" for="subcategory">In Sub Section</label>
        <select class="bg-white outline-none w-full p-[20px] border-[2px] border-[#f7a813]" name="subcategory" id="subcategory" required>
            <option hidden value="">Select Sub Section</option>
            <% data.forEach(element => { %>
                <option value="<%= element._id %>"><%= element.name %></option>
            <% }) %>
        </select>
    </div>
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <input class="bg-[#f7a813] py-[15px] text-white cursor-pointer" type="submit" value="Add Project">
</form>